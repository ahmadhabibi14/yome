---
import Navbar from "../partials/navbar.astro";
import Footer from "../partials/footer.astro";
import Opengraph from "../partials/opengraph.astro";
const { title, og_url, og_image } = Astro.props
import '../css/base.css';
---

<html lang="en">
   <head>
      <meta charset="utf-8" />
      <link rel="icon" type="image/svg+xml" href="/img/favicon/favicon.svg" />
      <meta name="viewport" content="width=device-width" />
      <meta name="generator" content={Astro.generator} />
      <title>{ title }</title>
      <Opengraph og_title={ title } og_url={ og_url } og_image={ og_image } />
   </head>
	<body class="font-poppins bg-gray-950 text-gray-50">
		<Navbar />
		<main class="mt-24 px-20 min-h-[80vh]">
         <slot />
      </main>
      <Footer />
	</body>
</html>